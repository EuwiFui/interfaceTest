- name: testLoginwithCorrectInfo
  method: GET
  uri: http://u.yanxiu.com/login.json
  param:
     loginName: XY02735506@yanxiu.com
     password: 123456
  expected: {
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "code": {
      "type": "integer",
       "enum": [
        1
      ]
    },
    "data": {
      "type": "string"
    },
    "desc": {
      "type": "string"
    },
    "token": {
      "type": "string"
    },
    "actiFlag": {
      "type": "integer"
    },
    "uid": {
      "type": "integer"
    },
    "uname": {
      "type": "string"
    },
    "head": {
      "type": "string"
    },
    "debug": {
      "type": "string"
    }
  },
  "required": [
    "code",
    "data",
    "desc",
    "token",
    "actiFlag",
    "uid",
    "uname",
    "head",
    "debug"
  ]
}

